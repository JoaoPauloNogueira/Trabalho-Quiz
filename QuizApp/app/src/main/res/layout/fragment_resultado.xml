<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:background="@mipmap/quiz_background_bord"
    tools:context="com.example.joaopaulo.quizapp.Fragments.ResultadoFragment"
    android:id="@+id/cnst_layout"
    android:layout_marginTop="120dp">


    <TextView
        android:id="@+id/txt_titulo_resultado"
        android:background="@color/cardview_dark_background"
        android:textColor="@color/cardview_light_background"
        android:textSize="28dp"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:textAlignment="center"
        android:text="@string/titulo_resultado"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/txt_resultado"
        android:layout_width="360dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="112dp"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_titulo_resultado"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:text="@string/btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_ok"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:backgroundTint="@android:color/holo_blue_light"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_resultado" />

</android.support.constraint.ConstraintLayout>
