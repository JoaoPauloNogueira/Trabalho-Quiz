        android:layout_height="wrap_content"
        android:id="@+id/txt_cadastro_alternativa_4"
        app:layout_constraintRight_toLeftOf="@+id/gdl_v_35"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/gdl_v_15"
