        app:layout_constraintRight_toLeftOf="@+id/gdl_v_35"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp" />

    <EditText
        android:text="@string/cadastro_pergunta"
        android:layout_width="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/edt_cadastro_pergunta"
        android:background="@android:drawable/edit_text"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="@+id/gdl_h_40_2"
        android:layout_marginRight="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/gdl_v_35"
